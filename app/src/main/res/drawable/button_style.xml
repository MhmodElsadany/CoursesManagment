<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <gradient android:angle="270" android:startColor="#691A99" android:endColor="#673AB7"

                />
            <corners android:radius="15dp" />
            <stroke android:color="#3f5143" android:width="2dp" />
        </shape>


    </item>
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <gradient android:angle="270" android:startColor="#673AB7" android:endColor="#691A99"></gradient>
            <stroke android:color="#3f5143" android:width="2dp" />


        </shape>


    </item>


</selector>